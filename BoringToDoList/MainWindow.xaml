<Window x:Class="BoringToDoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BoringToDoList"
        mc:Ignorable="d"
        Title="Boring to do app" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="dgToDoTable" Margin="10"  FontSize="20" FontFamily="Consolas">
            <DataGrid.Columns>
                <DataGridTextColumn IsReadOnly="True" Header="Created" Width="240"/>
                <DataGridCheckBoxColumn IsReadOnly="False" Header="Status" Width="90"/>
                <DataGridTextColumn IsReadOnly="False" Header="Task" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
